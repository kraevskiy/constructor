server {
	listen 80;

	server_name constructor.local;

	location / {
		proxy_pass http://client:3000;
		# Needed for sockets
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
	}

	location /api {
		proxy_pass http://api:3002;
	}
}

server {
	listen 80;
	client_max_body_size 20M;
	server_name admin.constructor.local;

	location / {
		proxy_pass http://admin:3001;
		# Needed for sockets
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
	}

	location /api {
		proxy_pass http://api:3002;
	}
}

server {
	listen 80;

	server_name image.constructor.local;

	location / {
		root /media/uploads;
		try_files $uri $uri/;
	}
}

